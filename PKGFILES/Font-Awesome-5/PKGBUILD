pkgbase=ttf-font-awesome-5
pkgname=(ttf-font-awesome-5 otf-font-awesome-5)
pkgver=5.9.0
pkgrel=5
pkgdesc="100% free version of font awesome."
url="http://fontawesome.io/"
license=('custom')
arch=('any')
depends=('fontconfig')
conflicts=()
source=("$pkgname-$pkgver.tar.gz::https://github.com/FortAwesome/Font-Awesome/archive/v$pkgver.tar.gz"
	"LICENSE.txt")
sha256sums=('cfa771c26866011d8988e2de2d8ce8cd199e5b03eb58ff6dbeb1abd8049cd697'
            '465b9cc2950960b0f70cca23b57f10a463f0d4a05df30a8aa3b3d43fded5b0c5')

package_ttf-font-awesome-5() {
  install -Dm644 OFL "$pkgdir/usr/share/licenses/$pkgname/OFL"
  cd "Font-Awesome-$pkgver/fonts"
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -m644 *.ttf "$pkgdir/usr/share/fonts/TTF"
}

package_otf-font-awesome-5() {
  install -Dm644 OFL "$pkgdir/usr/share/licenses/$pkgname/OFL"
  cd "Font-Awesome-$pkgver/fonts"
  install -d "$pkgdir/usr/share/fonts/OTF"
  install -m644 *.otf "$pkgdir/usr/share/fonts/OTF"
}
